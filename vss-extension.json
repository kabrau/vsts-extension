{
    "manifestVersion": 1,
    "id": "vsts-extensions-many-control",
    "version": "0.1.3",
    "name": "Many controls",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Describe your extension.",
    "publisher": "marcelocabralghilardi",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work Items",
        "Extensions",
        "Work Item Control",
        "Samples"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "links": {
        "home": {
            "uri": "https://github.com/kabrau/vsts-extension"
        },
        "getstarted": {
            "uri": "https://github.com/kabrau/vsts-extension"
        },
        "learn": {
            "uri": "https://github.com/kabrau/vsts-extension"
        },
        "support": {
            "uri": "https://github.com/kabrau/vsts-extension"
        },
        "repository": {
            "uri": "https://github.com/kabrau/vsts-extension"
        },
        "issues": {
            "uri": "https://github.com/kabrau/vsts-extension"
        }
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "build",
            "addressable": true
        },
        {
            "path": "url.html",
            "addressable": true
        },
        {
            "path": "css",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "url-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A work item form control that allows to open a url.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Url control",
                "uri": "url.html",
                "height": 25,
				"inputs": [
				    {
                        "id":"FieldName",
                        "name": "Select the field for this control. Use a hidden field",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["String", "PlainText","Integer"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"UrlMacro",
                        "name": "Write a URL macro, where {0} is will replaced by the value of the field, e.g. http://myserver/viewTicket?id={0}",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
				    {
                        "id":"FieldNameText",
                        "name": "Select the field for text this control. Use a hidden field, e.g ClientName",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["String", "PlainText","Integer"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id":"TextMacro",
                        "name": "Write a Text macro, where {0}{1} is will replaced by the value of the fields (1 and 2), e.g. {0}-{1}",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }                    
				]
            }
        }
    ]
}
